<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_big_bg"
    android:orientation="vertical" 
    android:gravity="center"
    android:id="@+id/alert_layout">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:background="@drawable/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/tips_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tips_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@id/tips_img"
                android:text="@string/tips"
                android:textColor="#3AAAD6"
                android:textSize="20sp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/pop_win_top_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dip" 
            android:gravity="center">

            <TextView
                android:id="@+id/tips_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip" 
                android:autoLink="phone"
                android:textColor="#000000"
                android:textSize="18sp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/pop_win_bottom_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:layout_width="135dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/white"
                android:id="@+id/dialog_calcel" />

            <ImageView
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="@drawable/pop_win_vertical_line"
                android:layout_weight="1" />
            
            <Button
                android:layout_width="135dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/white"  
                android:id="@+id/dialog_makesure"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>