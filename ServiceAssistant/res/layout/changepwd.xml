<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/content_panel_bg"
    android:orientation="vertical" >

    <include layout="@layout/top_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="20dip"
        android:orientation="horizontal" >

        <TextView
            style="@style/changepwd.title"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dip"
            android:gravity="right"
            android:text="@string/old_pwd" />

        <EditText
            android:id="@+id/old_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_state_bg"
            android:inputType="textPassword" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="20dip"
        android:orientation="horizontal" >

        <TextView
            style="@style/changepwd.title"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dip"
            android:gravity="right"
            android:text="@string/pwd" />

        <EditText
            android:id="@+id/new_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_state_bg"
            android:inputType="textPassword" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="20dip"
        android:orientation="horizontal" >

        <TextView
            style="@style/changepwd.title"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dip"
            android:gravity="right"
            android:text="@string/affirm_pwd" />

        <EditText
            android:id="@+id/repeat_new_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_state_bg"
            android:inputType="textPassword" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirm_change"
        android:layout_marginTop="50dip"
        android:layout_gravity="center"
        android:background="@drawable/normal_btn_click"
        android:onClick="ChangeBtnClick"
        android:textSize="20sp" />

</LinearLayout>