<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/panel_bg"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:scrollbarSize="3dip"
        android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thumb" >

        <LinearLayout
            android:id="@+id/content_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/shape"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    style="@style/order_detail.state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dip"
                    android:layout_marginTop="5dip"
                    android:text="@string/current_state" />

                <TextView
                    android:id="@+id/current_state_value"
                    style="@style/order_detail.state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dip"
                    android:layout_marginTop="5dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/basic_infor_bg" >

                <TextView
                    style="@style/order_detail.baseinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="5dip"
                    android:text="@string/base_info" />
            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_marginTop="5dip"
                android:background="#4E4D4E"
                android:shrinkColumns="0" >

                <TableRow
                    android:layout_margin="1dip"
                    android:background="#F0EFEF" >

                    <TextView
                        style="@style/order_detail.content_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/order_id" />

                    <TextView
                        android:id="@+id/order_id_value"
                        style="@style/order_detail.content_value"
                        android:layout_width="200dip"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dip" />
                </TableRow>

                <TableRow
                    android:layout_margin="1dip"
                    android:background="#F0EFEF" >

                    <TextView
                        style="@style/order_detail.content_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/order_service_time" />

                    <TextView
                        android:id="@+id/order_service_time_value"
                        style="@style/order_detail.content_value"
                        android:layout_width="200dip"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dip" />
                </TableRow>

                <TableRow
                    android:layout_margin="1dip"
                    android:background="#F0EFEF" >

                    <TextView
                        style="@style/order_detail.content_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/order_send_type" />

                    <TextView
                        android:id="@+id/order_send_type_value"
                        style="@style/order_detail.content_value"
                        android:layout_width="200dip"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dip" />
                </TableRow>

                <TableRow
                    android:layout_margin="1dip"
                    android:background="#F0EFEF" >

                    <TextView
                        style="@style/order_detail.content_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/order_customer_name" />

                    <TextView
                        android:id="@+id/order_customer_name_value"
                        style="@style/order_detail.content_value"
                        android:layout_width="200dip"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dip" />
                </TableRow>

                <TableRow
                    android:layout_margin="1dip"
                    android:background="#F0EFEF" >

                    <TextView
                        style="@style/order_detail.content_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/order_customer_address" />

                    <TextView
                        android:id="@+id/order_customer_address_value"
                        style="@style/order_detail.content_value"
                        android:layout_width="200dip"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dip" />
                </TableRow>

                <TableRow
                    android:layout_margin="1dip"
                    android:background="#F0EFEF" >

                    <TextView
                        style="@style/order_detail.content_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/order_contact_name" />

                    <TextView
                        android:id="@+id/order_contact_name_value"
                        style="@style/order_detail.content_value"
                        android:layout_width="200dip"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dip" />
                </TableRow>

                <TableRow
                    android:layout_margin="1dip"
                    android:background="#F0EFEF" >

                    <TextView
                        style="@style/order_detail.content_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/order_customer_phone" />

                    <TextView
                        android:id="@+id/order_customer_phone_value"
                        style="@style/order_detail.content_value"
                        android:layout_width="200dip"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dip" />
                </TableRow>

                <TableRow
                    android:layout_margin="1dip"
                    android:background="#F0EFEF" >

                    <TextView
                        style="@style/order_detail.content_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/order_customer_mobile" />

                    <TextView
                        android:id="@+id/order_customer_mobile_value"
                        style="@style/order_detail.content_value"
                        android:layout_width="200dip"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dip" />
                </TableRow>

                <TableRow
                    android:layout_margin="1dip"
                    android:background="#F0EFEF" >

                    <TextView
                        style="@style/order_detail.content_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/order_remark" />

                    <TextView
                        android:id="@+id/order_remark_value"
                        style="@style/order_detail.content_value"
                        android:layout_width="200dip"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dip" />
                </TableRow>

                <TableRow
                    android:layout_margin="1dip"
                    android:background="#F0EFEF" >

                    <TextView
                        style="@style/order_detail.content_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/order_contact_tax_num" />

                    <TextView
                        android:id="@+id/order_contact_tax_num_value"
                        style="@style/order_detail.content_value"
                        android:layout_width="200dip"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dip" />
                </TableRow>

                <TableRow
                    android:layout_margin="1dip"
                    android:background="#F0EFEF" >

                    <TextView
                        style="@style/order_detail.content_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/order_tax_department" />

                    <TextView
                        android:id="@+id/order_tax_department_value"
                        style="@style/order_detail.content_value"
                        android:layout_width="200dip"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dip" />
                </TableRow>

                <TableRow
                    android:layout_margin="1dip"
                    android:background="#F0EFEF" >

                    <TextView
                        style="@style/order_detail.content_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/order_service_arrive_time" />

                    <TextView
                        android:id="@+id/order_service_arrive_time_value"
                        style="@style/order_detail.content_value"
                        android:layout_width="200dip"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dip" />
                </TableRow>

                <TableRow
                    android:layout_margin="1dip"
                    android:background="#F0EFEF" >

                    <TextView
                        style="@style/order_detail.content_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/order_is_charge" />

                    <TextView
                        android:id="@+id/order_is_charge_value"
                        style="@style/order_detail.content_value"
                        android:layout_width="200dip"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dip" />
                </TableRow>

                <TableRow
                    android:layout_margin="1dip"
                    android:background="#F0EFEF" >

                    <TextView
                        style="@style/order_detail.content_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/order_charge_money" />

                    <TextView
                        android:id="@+id/order_charge_money_value"
                        style="@style/order_detail.content_value"
                        android:layout_width="200dip"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dip" />
                </TableRow>

                <TableRow
                    android:layout_margin="1dip"
                    android:background="#F0EFEF" >

                    <TextView
                        style="@style/order_detail.content_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/order_urgency_state" />

                    <TextView
                        android:id="@+id/order_urgency_state_value"
                        style="@style/order_detail.content_value"
                        android:layout_width="200dip"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dip" />
                </TableRow>
                
                 <TableRow
                    android:id="@+id/service_product_tablerow"
                    android:layout_margin="1dip"
                    android:background="#F0EFEF"
                    android:visibility="gone" >

                    <TextView
                        style="@style/order_detail.content_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/service_product" />

                    <TextView
                        android:id="@+id/service_product_value"
                        style="@style/order_detail.content_value"
                        android:layout_width="200dip"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dip" />
                </TableRow>
                
                 <TableRow
                    android:layout_margin="1dip"
                    android:background="#F0EFEF" >

                    <TextView
                        style="@style/order_detail.content_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/order_optimal_path" />

                    <TextView
                        android:id="@+id/order_optimal_path_value"
                        style="@style/order_detail.content_value"
                        android:layout_width="200dip"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dip" />
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:id="@+id/hide_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:layout_marginTop="20dip"
                    android:background="@drawable/basic_infor_bg"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/order_detail.baseinfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dip"
                        android:layout_marginLeft="10dip"
                        android:layout_marginTop="5dip"
                        android:text="@string/order_dispose_process" />
                </LinearLayout>

                <TextView
                    android:id="@+id/dispose_process_step"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_marginTop="5dip"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:layout_marginTop="20dip"
                    android:background="@drawable/basic_infor_bg"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/current_state_complish_value"
                        style="@style/order_detail.baseinfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dip"
                        android:layout_marginLeft="10dip"
                        android:layout_marginTop="5dip" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dynamic_content_panel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/print_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dip"
                android:background="@drawable/normal_btn_click"
                android:onClick="PrintBtnClick"
                android:visibility="gone"
                android:text="@string/conplete_panel_btn5" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>