<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/tm_bg_01">
    
	<ImageView
        android:id="@+id/img_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_centerVertical="true"/>
     
    <TextView
        android:id="@+id/list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip" 
        android:layout_marginRight="5dip"
        android:layout_marginTop="3dip"
        android:layout_toRightOf="@id/img_type"
        style="@style/order_list.content.number"/>
 
      <TextView
        android:id="@+id/omit_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_title"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="5dip"
        android:ellipsize="end"
        android:singleLine="true" 
        android:layout_toRightOf="@id/img_type"
        style="@style/order_list.content.content"/>
      
     <TextView
         android:id="@+id/list_item_create_time"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/omit_content"
         android:layout_toRightOf="@id/img_type"
         android:layout_marginRight="20dip" 
         android:ellipsize="end"
         android:layout_marginTop="7dip"
         android:lines="1"
         android:layout_marginLeft="5dip"
         style="@style/order_list.content.time"/>
     
  
</RelativeLayout>